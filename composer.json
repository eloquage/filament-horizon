{
    "name": "miguelenes/filament-horizon",
    "description": "This is my package filament-horizon",
    "keywords": [
        "miguelenes",
        "laravel",
        "filament-horizon"
    ],
    "homepage": "https://github.com/miguelenes/filament-horizon",
    "support": {
        "issues": "https://github.com/miguelenes/filament-horizon/issues",
        "source": "https://github.com/miguelenes/filament-horizon"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Miguel Enes",
            "email": "carlos.miguel.enes@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^4",
        "laravel/horizon": "^5",
        "spatie/laravel-package-tools": "^1"
    },
    "require-dev": {
        "laravel/pint": "^1",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8",
        "orchestra/testbench": "^10",
        "pestphp/pest": "^4",
        "pestphp/pest-plugin-laravel": "^4"
    },
    "autoload": {
        "psr-4": {
            "Miguelenes\\FilamentHorizon\\": "src/",
            "Miguelenes\\FilamentHorizon\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Miguelenes\\FilamentHorizon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Miguelenes\\FilamentHorizon\\FilamentHorizonServiceProvider"
            ],
            "aliases": {
                "FilamentHorizon": "Miguelenes\\FilamentHorizon\\Facades\\FilamentHorizon"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
